<section class="view index">

  <div class="view-top-bar">
    <h1 class="view-current-title">What would you like to do Jane?</h1>
    <table class="table">
       <tr class="table-header">
         <th>Name</th>
         <th>Quantity</th>
         <th>Requested On</th>
         <th>Requested By</th>
         {{#if canFulfill}}
           <th>Actions</th>
         {{/if}}
       </tr>
       {{#each model as |request|}}
         <tr>
           <td>{{request.inventoryItem.name}}</td>
           <td>{{request.quantity}}</td>
           <td>{{date-format request.dateRequested}}</td>
           <td>{{request.requestedBy}}</td>
           {{#if canFulfill}}
             <td>
               <button class="btn btn-primary" {{action 'fulfill' request}}>Fulfill</button>
             </td>
           {{/if}}
         </tr>
       {{/each}}
    </table>
	
  </div>

</section>
