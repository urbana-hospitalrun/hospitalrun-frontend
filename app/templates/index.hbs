<section class="view index">

<div class="container" style="margin-top: 30px">
  <div class="header" style="font-size: 20px">
    <div class="col-md-3 no-padding">
      Admitted Patients: <b> 20</b>
    </div>
    <div class="col-md-3 no-padding">
      Incoming Surgeries: <b> 25</b>
    </div>
    <div class="col-md-3 no-padding">
      Requests: <b> 10</b>
    </div>
    <div class="pull-right">
      <span class="text-primary"><i class="glyphicon glyphicon-user"></i> Welcome, John</span>
    </div>
  </div>
{{#each model as |user|}}
  <p>{{user.user}} {{user.disease}}</p>
  <button {{action 'showPatientInfo'></button>
{{/each}}
<p>number of patients: {{model.length}}</p>

  <div class="col-md-6" style="padding-left: 0px">
    <table class="table table-hover dashboard-table">
      <thead class="bg-navy">
        <td></td>
        <td class="text-white">Current Tasks</td>
        <td></td>
        <td></td>
      </thead>
      <tbody>
        <tr class="bg-grey-navy">
          <td></td><td>Task</td><td>Location</td><td></td>
        </tr>
        <tr data-toggle="collapse" data-target="#accordion" class="clickable">
          <td><i class="glyphicon glyphicon-user"></i></td>
          <td> [Task Title]</td>
          <td>Rm. 259</td>
          <td>
            <div class="btn btn-primary">
              Fulfill
            </div>
          </td>
        </tr>
        <tr>
          <td></td>
            <td>
                <div id="accordion" class="collapse">Hidden expandable</div>
            </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <table class="table table-hover dashboard-table">
      <thead class="bg-navy">
        <td></td>
        <td class="text-white">Patient List</td>
        <td colspan="4">
         <input type="text" class="form-control pull-right" placeholder="Search for a patient..." style="margin-right: 8px; margin-top: 8px">
        </td>
      </thead>
      <tbody>
        <tr class="bg-grey-navy">
          <td></td><td>Name</td><td>Sex</td><td>ID</td><td>Location</td><td></td>
        </tr>
        <tr data-toggle="collapse" data-target="#accordion" class="clickable">
          <td><i class="glyphicon glyphicon-user"></i></td>
          <td> [Task Title]</td>
          <td>Rm. 259</td>
          <td></td>
          <td>
            <div class="btn btn-primary">
              Fulfill
            </div>
          </td>
        </tr>
        <tr>
          <td></td>
            <td>
                <div id="accordion" class="collapse">Hidden expandable</div>
            </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
</section>